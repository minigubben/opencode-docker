# Host path exposure (ONLY mount what you want opencode to access)
HOST_ALLOWED_PATH=./allowed

# Web client settings
PORT=4096

# Optional default model (provider/model)
# OPENCODE_MODEL=openai/gpt-5

# Optional image build settings
OPENCODE_NPM_PACKAGE=opencode-ai
OPENCODE_NPM_VERSION=latest
# Space-separated npm globals installed at build time (suggested: pnpm)
OPENCODE_EXTRA_NPM_PACKAGES=pnpm
# Space-separated apt packages installed at build time
OPENCODE_EXTRA_APT_PACKAGES=

# Provider/login credentials (fill only what you use)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OPENROUTER_API_KEY=
GITHUB_TOKEN=

# Cookie session auth-proxy settings
# Required: password for the login form in front of opencode-web
AUTH_PASSWORD=
# Required: random secret used to sign session cookies
AUTH_COOKIE_SECRET=replace-me-with-a-long-random-string
# Optional session lifetime
AUTH_SESSION_TTL_HOURS=24
# Set true when serving through HTTPS
AUTH_SECURE_COOKIE=false
