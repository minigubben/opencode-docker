# Host path exposure (ONLY mount what you want opencode to access)
HOST_ALLOWED_PATH=./allowed

# Web client settings
PORT=4096
# Optional web auth username (defaults to "blank" if left empty)
OPENCODE_SERVER_USERNAME=opencode
# Web auth password (recommended, especially with network access, disabled if left empty)
OPENCODE_SERVER_PASSWORD=

# Optional default model (provider/model)
# OPENCODE_MODEL=openai/gpt-5

# Provider/login credentials (fill only what you use)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
OPENROUTER_API_KEY=
GITHUB_TOKEN=
